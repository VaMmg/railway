# Configuración para Railway
# Estas variables se configuran en el dashboard de Railway

# Base de datos (Railway MySQL)
DB_TYPE=mysql
DB_HOST=${MYSQLHOST}
DB_PORT=${MYSQLPORT}
DB_NAME=${MYSQLDATABASE}
DB_USER=${MYSQLUSER}
DB_PASS=${MYSQLPASSWORD}

# JWT - CAMBIA ESTE SECRET EN PRODUCCIÓN
JWT_SECRET=sistema_creditos_railway_secret_2024_CAMBIAME
JWT_EXPIRATION=3600

# Configuración de aplicación
APP_ENV=production
APP_DEBUG=false
APP_URL=${RAILWAY_PUBLIC_DOMAIN}

# CORS - Permite todos los orígenes (ajusta según necesites)
CORS_ALLOWED_ORIGINS=*

# Configuración de archivos
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Configuración de cajas
MAX_CASH_LIMIT=100000
AUTO_CLOSE_CASH=true
