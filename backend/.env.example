# Configuración del Sistema de Créditos
# Copia este archivo a .env y configura tus valores

# Base de datos
DB_TYPE=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sistema_creditos
DB_USER=postgres
DB_PASS=admin

# JWT
JWT_SECRET=sistema_creditos_secret_key_2024_change_in_production
JWT_EXPIRATION=3600

# Configuración de aplicación
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Configuración de archivos
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Configuración de cajas
MAX_CASH_LIMIT=100000
AUTO_CLOSE_CASH=true

# Email (si se implementa notificaciones por email)
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@sistemaCredito.local
MAIL_FROM_NAME="Sistema de Créditos"